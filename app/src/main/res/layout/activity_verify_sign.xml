<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorLight"
            android:orientation="vertical"
            android:paddingTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_16">

            <TextView
                style="@style/tv_dark_16"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/dp_25"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:text="@string/verify_sign_tip"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                style="@style/tv_dark_14"
                android:paddingTop="@dimen/dp_16"
                android:paddingBottom="@dimen/dp_16"
                android:text="@string/key_" />

                <EditText
                    android:id="@+id/et_key"
                    style="@style/base_et"
                    android:singleLine="false"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:paddingRight="@dimen/dp_16"
                    android:textSize="@dimen/sp_13" />

            </LinearLayout>

            <View style="@style/base_line" />

            <TextView
                android:id="@+id/tv_scan"
                style="@style/bt_theme_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_75"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_90"
                android:layout_marginBottom="@dimen/dp_25"
                android:text="@string/scan" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/colorLight"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_verify"
                style="@style/bt_theme_circle"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_90"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_90"
                android:layout_marginBottom="@dimen/dp_25"
                android:text="@string/verify_sign" />


            <TextView
                android:id="@+id/tv_ignore"
                style="@style/bt_theme_circle"
                android:background="@drawable/circle_line_orange"
                android:layout_marginLeft="@dimen/dp_90"
                android:layout_marginRight="@dimen/dp_90"
                android:layout_marginBottom="@dimen/dp_25"
                android:text="@string/ignore"
                android:textColor="@color/colorAccent" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>