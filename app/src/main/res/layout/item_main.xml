<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorLight"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zm.secretsign.view.RatioImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_54"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_54"
        android:background="@drawable/circle_pie_gray_real"
        android:scaleType="centerInside"
        android:padding="@dimen/dp_20"
        android:src="@mipmap/create_address"
        app:height_to_width_ratio="1" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/tv_dark_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_20"
        android:text="@string/app_name" />

    <!--<View style="@style/base_line" />-->

</LinearLayout>